<body>

    <div class="d-flex container justify-content-center align-items-center">

        <div class="container pa d-flex flex-row overflow-auto" id="tabs-bar">
{#            <div class="box calendar-tab"#}
{#                 id="tab-1">1#}
{#            </div>#}
            <div class="box box-add calendar-tab"
                 id="add-button">+
            </div>
        </div>
    </div>

    <div class="d-flex container flex-row" id="calendar-gallery">
        <div class="container w-25" id="filters-wrapper">
            <div class="container filters-container" id="filters-1">
                <p class="text-start mb-1">Wykładowca</p>
                <div class="input-group mb-1">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="wykladowca-input-1">
                </div>
                <p class="text-start mb-1">Sala</p>
                <div class="input-group mb-1">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="sala-input-1">
                </div>
                <p class="text-start mb-1">Przedmiot</p>
                <div class="input-group mb-1">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="przedmiot-input-1">
                </div>
                <p class="text-start mb-1">Grupa</p>
                <div class="input-group mb-1">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="grupa-input-1">
                </div>
                <p class="text-start mb-1">Numer albumu</p>
                <div class="input-group mb-1">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="album-input-1">
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" id="filter-button-1">Wyszukaj</button>
                    <button class="btn btn-light" id="clean-filters-button-1">Wyczyść filtry</button>
                </div>
            </div>
        </div>
        <div class="container w-75 h-100" id="slides_wrapper">
            <div class="container calendar-slide" id="calendar-1">
            </div>
        </div>
    </div>


    <script>
        const urlParams = {{ queryParameters|json_encode()|raw }};
        console.log('URL Parameters:', urlParams);
    </script>
    <script src="../{{ asset('js/calendar.js') }}"></script>
    <script src="../{{ asset('js/tabs.js') }}"></script>
    <script src="../{{ asset('js/filters.js') }}"></script>
</body>
